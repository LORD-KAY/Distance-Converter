<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialogLayout"
    android:elevation="@dimen/dialogElevation"
    android:isScrollContainer="true"
    android:gravity="top|center_vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:text="Performs Only Three Conversions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:padding="@dimen/view_padding"
                android:elevation="@dimen/elevation"
                android:layout_marginTop="12dp"
                android:textStyle="normal|bold"
                android:textSize="15sp" />

            <TextView
                android:text="     Meters to Kilometers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:padding="@dimen/dialog_padding"
                android:elevation="@dimen/elevation"
                android:layout_marginTop="12dp"
                android:textStyle="normal|bold"
                android:textSize="15sp" />

            <TextView
                android:text="     Meters to Inches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:padding="@dimen/dialog_padding"
                android:elevation="@dimen/elevation"
                android:layout_marginTop="12dp"
                android:textStyle="normal|bold"
                android:textSize="15sp" />

            <TextView
                android:text="     Meters to Feet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:padding="@dimen/dialog_padding"
                android:elevation="@dimen/elevation"
                android:layout_marginTop="12dp"
                android:textStyle="normal|bold"
                android:textSize="15sp" />

            <TextView
                android:text="The Three small circles represent the CHOICES you can make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:padding="@dimen/dialog_padding"
                android:elevation="@dimen/elevation"
                android:layout_marginTop="12dp"
                android:textStyle="normal|bold"
                android:textSize="15sp" />

            <TextView
                android:text="Results are displayed based on the conversion metrics selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:padding="@dimen/dialog_padding"
                android:elevation="@dimen/elevation"
                android:layout_marginTop="12dp"
                android:textStyle="normal|bold"
                android:textSize="15sp" />
            <TextView
                android:text="Click anywhere on the interface to hide the keyboard after the input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:padding="@dimen/dialog_padding"
                android:layout_margin="@dimen/view_margin"
                android:textStyle="normal|bold"
                android:textSize="15sp"/>

            <TextView
                android:text="Quit the APP by navigating the top right corner icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:padding="@dimen/dialog_padding"
                android:elevation="@dimen/elevation"
                android:layout_marginTop="12dp"
                android:textStyle="normal|bold"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>